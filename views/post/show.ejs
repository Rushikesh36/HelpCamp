<%- include('../partials/header') %>
    <title>HelpCamp Posts</title>
    <link rel="stylesheet" href="/css/showPosts.css">

    <%- include('../partials/navbar') %>
    <%- include('../partials/flash') %>
  
    <div class="container mt-5 title">
        <div class="row d-flex justify-content-center">
            <div class="col-md-8 text-center">
    <% if(category == 'hospital'){ %> 
        <h2>Hospital Beds </h2>
    <% } %> 
    <% if(category == 'blood') {%> 
        <h2>Blood / Plasma</h2>
    <% } %> 
    <% if(category == 'medicines'){ %> 
        <h2>Medical Utilities & Medicines</h2> 
    <% } %> 
            </div>
        </div>
    </div>            

    <% for(p of posts) {%>
        <a href="/post/<%=p._id%>"> 
        <div class="container mt-5">
            <div class="row d-flex justify-content-center">
                <div class="col-md-8">
                    <div class="card p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="user d-flex flex-row align-items-center">
                                <span>
                                    <i class="fas fa-user"> </i><i><span class="username"> <%= p.user.username %></span></i>
                                    <hr>
                                    </span>                                
                                    
                                    
                            </div> 
                            
                        </div>
                        <div class="card-text">
                            <small class="font-weight-bold"><b>Requirement :</b> <%= p.requirement %></small>
                        <div class="d-flex justify-content-between align-items-center">
                            <span><b><small class="font-weight-bold location">Location : </b><%= p.location %></small></span>
                            <b><i><small class="tdcolor"><%= p.time %> </small></i></b>                            
                        </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                                                        
                            <small class="font-weight-bold"><b>Pincode :</b> <%= p.pincode %></small>
                            
                            <b><i><small class="tdcolor"><%= p.date %> </small></i></b>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </a>      
    <% } %>    
   
<%- include('../partials/footer') %>