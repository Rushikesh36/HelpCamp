<%- include('../partials/header') %>
    <title>HelpCamp Posts</title>  
    <link rel="stylesheet" href="/css/showPosts.css">   
    <style>
        textarea{
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;

            width: 100%;
        }


    </style>

<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>
<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <div class="card p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="user d-flex flex-row align-items-center"><span>
                        
                        <div>
                        <% if(banner.categories == 'hospital'){ %> 
                            <b>Hospital Beds</b> 
                        <% } %> 
                        <% if(banner.categories == 'blood') {%> 
                            <b>Blood / Plasma</b>
                        <% } %> 
                        <% if(banner.categories == 'medicines'){ %> 
                            <b>Medical Utilities & Medicines</b> 
                        <% } %>
                        </div> 
                        
                        </span>
                    </div>
                   
                </div>
                <div class="card-text">
                    <small class="font-weight-bold"><b>Requirement : </b><%= banner.requirement %></small>
                <div class="d-flex justify-content-between align-items-center">
                    <span><small class="font-weight-bold location"><b>Location : </b><%= banner.location %></small></span>
                        <small class="tdcolor"><b><i><%= banner.time %></i></b> </small>                        
                                               
                </div>
                <div class="d-flex justify-content-between align-items-center">
                                                        
                    <small class="font-weight-bold"><b>Pincode :</b> <%= banner.pincode %></small>
                    
                    <small class="tdcolor"><b><i><%= banner.date %></i></b> </small>
                    
                </div>
            </div>
            </div>
        </div>
    </div>
</div>
  
<div class="container mt-5 editPost">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <div class="card p-3 editForm">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="user d-flex flex-row align-items-center">
                        <form class="form" method="post" action="/help/edit/<%= banner._id %>">
                            <div class="textarea">   
                                <div class="form-group">
                                    <select id="categories" class="form-select" name="categories" placeholder="Categories *" required>
                                    <option value="hospital" <%= banner.categories == 'hospital' ? 'selected' : ''%> >Hospital Bed</option>
                                    <option value="medicines" <%= banner.categories == 'medicines' ? 'selected' : ''%>>Medical Utilities & Medications</option>
                                    <option value="blood" <%= banner.categories == 'blood' ? 'selected' : ''%>>Blood/Plasma</option>
                                    </select>
                                </div> 
                                <br>        
                                <textarea  class="edit_requirement" name="requirement" cols="100" rows="2"><%= banner.requirement %></textarea>
                                <br> 
                                <div>                      
                                <input id="location" class="edit_location" type="text" placeholder="location" name="location" value="<%= banner.location %>">
                                </div>
                                <div>
                                    <input type="text" name="pincode" id="" placeholder="pincode" value="<%= banner.pincode %> ">
                                </div>
                                
                                <br>
                                <div>
                                <button class="btn btn-success" id="submit" type="submit">Update</button>
                                <button class="btn btn-primary" id="reset" type="reset">Reset</button>
                                <a href="/help/mypost"><button class="btn btn-danger" id="cancel" type="button">Cancel</button></a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- <script src="/js/edit.js"></script> -->
<%- include('../partials/footer') %>