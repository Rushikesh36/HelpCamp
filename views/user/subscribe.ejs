      <div class="f1 col-10 offset-1 col-sm-4 offset-sm-4 border border-5 border-danger rounded mb-5 mt-4">
         <div class="row mt-5 text-center">
               <div class="mt-2">
            <h4>Dose 1 Subscriptions</h4>
                  <h5>Age limit : 45</h5>
            <div class="mt-5">        
               <form action="/post/subscribe" method="post">
                  <input type="text" name="pincode" placeholder="pincode" required>
                  <button class="btn btn-danger rounded-pill text-center mt-3">Subscribe</button>
               </form>
            </div>
         </div>
         </div>
         <div class="row">
            <div class="text-center">
            
               <% if(pins.length) {%>
                  <p class="pt-2 text-center">You are Subscribed to the following pincodes : </p>
      
                  <% for(let p of pins){ %>
                     <div class="row">
                        <div class="">
                           <div class="rounded-pill" role="alert">
                                             
                                 <%= p.userpincode[0] %> <a href="/post/unsubscribe/<%= p.userpincode[0] %>"><span style="padding-left:5%;"></span><i class="fas fa-trash-alt" style="color : red">   </i></a>                   
                          
                           </div>
                        </div>
                     
                     </div>
      
                   
                     <% } %>
                        <% } %>
               <% if(!pins.length) {%>
                  <p class="head pt-4 text-center">No subscriptions yet for Dose 1!</p>
                  <% } %>  
                  <div style="margin-bottom: 10%;">

                  </div>
            </div>
